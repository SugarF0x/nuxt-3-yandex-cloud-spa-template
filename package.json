{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "bd": "yarn build && yarn deploy",
    "build": "nuxt build --dotenv env/.env.prod",
    "deploy": "yarn deploy:frontend & yarn deploy:backend",

    "terraform": "yarn terraform:env && yarn terraform:source && terraform",
    "terraform:source": "export $(grep -v '^#' ./env/.env.terraform | xargs)",
    "terraform:env": "sh ./scripts/generate-terraform-env-vars.sh",

    "deploy:frontend": "sh scripts/yc-deploy.frontend.sh",
    "deploy:backend": "sh scripts/yc-deploy.backend.sh",
    "deploy:gateway": "sh scripts/yc-deploy.api-gateway.sh",

    "dev": "nuxt dev --dotenv env/.env.local",
    "dev:update-iam-token": "sh scripts/yc.update-local-iam-token.sh",

    "generate": "nuxt generate",
    "preview": "nuxt preview",

    "postinstall": "nuxt prepare && patch-package",

    "//": "VVV LINUX ONLY VVV",

    "ydb:init": "docker pull cr.yandex/yc/yandex-docker-local-ydb:latest",
    "ydb:run": "cd server/ydb/local-instance && sh ../yc.ydb.run.sh",
    "ydb:stop": "docker stop ydb-local"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@rollup/plugin-commonjs": "^25.0.4",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.2.0",
    "@sidebase/nuxt-auth": "^0.6.0-beta.4",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^18.17.3",
    "nuxt": "^3.6.5",
    "patch-package": "^8.0.0",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "lodash-es": "^4.17.21",
    "next-auth": "^4.23.1",
    "ydb-sdk": "^4.6.0",
    "zod": "^3.22.2"
  }
}
