{
  "name": "nuxt-app",
  "private": true,
  "scripts": {
    "dev": "yarn env && nuxt dev",
    "bd": "yarn build && yarn deploy",
    "build": "yarn env && nuxt build",
    "deploy": "yarn deploy:frontend & yarn deploy:backend",
    "deploy:frontend": "sh scripts/yc-deploy.frontend.sh",
    "deploy:backend": "sh scripts/yc-deploy.backend.sh",
    "deploy:gateway": "sh scripts/yc-deploy.api-gateway.sh",
    "env": "yarn env:token && yarn env:keys && yarn env:terraform",
    "env:token": "sh scripts/env/get-token.sh",
    "env:keys": "sh scripts/env/get-keys.sh",
    "env:terraform": "sh scripts/env/get-keys.sh",
    "terraform": "yarn env && yarn terraform:source && terraform",
    "terraform:source": "export $(grep -v '^#' ./env/.env.terraform | xargs)",
    "terraform:env": "sh ./scripts/generate-terraform-env-vars.sh",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare && patch-package",
    "//": "VVV LINUX ONLY VVV",
    "ydb:init": "docker pull cr.yandex/yc/yandex-docker-local-ydb:latest",
    "ydb:run": "cd server/ydb/local-instance && sh ../yc.ydb.run.sh",
    "ydb:stop": "docker stop ydb-local"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@sidebase/nuxt-auth": "^0.6.3",
    "@types/lodash-es": "^4.17.8",
    "@types/node": "^20.10.5",
    "nuxt": "^3.9.0",
    "patch-package": "^8.0.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@yandex-cloud/nodejs-sdk": "^2.6.0",
    "lodash-es": "^4.17.21",
    "next-auth": "4.22.5",
    "ydb-sdk": "^5.1.1",
    "zod": "^3.22.4"
  }
}
